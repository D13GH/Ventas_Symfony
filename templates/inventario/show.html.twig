{% extends 'base.html.twig' %}

{% block title %}Inventario{% endblock %}

{% block body %}
    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Inventario</h4>

                    <button type="button" class="btn btn-dark btn-outline" onclick="location.href='{{ path('inventario_index') }}'"><i class="fa fa-angle-left "></i> back to list</button>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ inventario.id }}</td>
                        </tr>
                        <tr>
                            <th>Almacen</th>
                            <td>{{ inventario.idAlmacen }}</td>
                        </tr>
                        <tr>
                            <th>Producto</th>
                            <td>{{ inventario.idProducto }}</td>
                        </tr>
                        <tr>
                            <th>Existencia</th>
                            <td>{{ inventario.existencia }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <button type="button" class="btn btn-info btn-block" onclick="location.href='{{ path('inventario_edit', {'id': inventario.id}) }}'"> <i class="fa fa-pencil"></i> Edit</button>

                    <br>
                    {{ include('inventario/_delete_form.html.twig') }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}