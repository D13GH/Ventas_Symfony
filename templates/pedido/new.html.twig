{% extends 'base.html.twig' %}

{% block title %}New Pedido{% endblock %}

{% block slidebar %}
    {{ include('view/sidebarnav/menu.html.twig') }}
{% endblock %}

{%  block profile %}
    {% if is_granted('ROLE_ADMIN') %}
        <img src="{{ asset('images/users/admin.png') }}" alt="admin" class="profile-pic" />
    {% endif %}
    {% if is_granted('ROLE_USER') %}
        <img src="{{ asset('images/users/user.png') }}" alt="user" class="profile-pic" />
    {% endif %}
{%  endblock profile %}

{% block body %}
    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create new Pedido</h4>
                    <button type="button" class="btn btn-dark btn-outline" onclick="location.href='{{ path('pedido_index') }}'"><i class="fa fa-angle-left "></i> back to list</button>

                    {{ include('pedido/_form.html.twig') }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}