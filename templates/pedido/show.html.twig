{% extends 'base.html.twig' %}

{% block title %}Pedido{% endblock %}

{% block slidebar %}
    {{ include('view/sidebarnav/menu.html.twig') }}
{% endblock %}

{%  block profile %}
    {% if is_granted('ROLE_ADMIN') %}
        <img src="{{ asset('images/users/admin.png') }}" alt="admin" class="profile-pic" />
    {% endif %}
    {% if is_granted('ROLE_USER') %}
        <img src="{{ asset('images/users/user.png') }}" alt="user" class="profile-pic" />
    {% endif %}
{%  endblock profile %}

{% block body %}
    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Pedido</h4>

                    <button type="button" class="btn btn-dark btn-outline" onclick="location.href='{{ path('pedido_index') }}'"><i class="fa fa-angle-left "></i> back to list</button>



                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ pedido.id }}</td>
                        </tr>
                        <tr>
                            <th>Empleado</th>
                            <td>{{ pedido.idEmpleado }}</td>
                        </tr>
                        <tr>
                            <th>Cliente</th>
                            <td>{{ pedido.idCliente }}</td>
                        </tr>
                        <tr>
                            <th>Producto</th>
                            <td>{{ pedido.idProducto }}</td>
                        </tr>
                        <tr>
                            <th>Fecha</th>
                            <td>{{ pedido.fecha ? pedido.fecha|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>FechaEntrega</th>
                            <td>{{ pedido.fechaEntrega ? pedido.fechaEntrega|date('Y-m-d') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <button type="button" class="btn btn-info btn-block" onclick="location.href='{{ path('pedido_edit', {'id': pedido.id}) }}'"> <i class="fa fa-pencil"></i> Edit</button>

                    <br>
                    {{ include('pedido/_delete_form.html.twig') }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}