<form method="post" action="{{ path('bitacora_delete', {'id': bitacora.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bitacora.id) }}">
    <button class="btn btn-danger btn-block"><i class="fa fa-minus "></i> Delete</button>
</form>