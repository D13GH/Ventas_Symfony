{% extends 'base.html.twig' %}

{% block title %}Bitacora{% endblock %}

{% block slidebar %}
    {{ include('view/admin/menu.html.twig') }}
{% endblock %}

{% block body %}
    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Bitacora</h4>

                    <button type="button" class="btn btn-dark btn-outline" onclick="location.href='{{ path('bitacora_index') }}'"><i class="fa fa-angle-left "></i> back to list</button>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ bitacora.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ bitacora.email }}</td>
                        </tr>
                        <tr>
                            <th>Token</th>
                            <td>{{ bitacora.token }}</td>
                        </tr>
                        <tr>
                            <th>Inicio</th>
                            <td>{{ bitacora.fecIni ? bitacora.fecIni|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Fin</th>
                            <td>{{ bitacora.fecFin ? bitacora.fecFin|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}