{% extends 'base.html.twig' %}

{% block title %}Empleado/Usuario{% endblock %}

{% block slidebar %}
    {{ include('view/admin/menu.html.twig') }}
{% endblock %}

{% block body %}
    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Empleado/Usuario</h4>

                    <button type="button" class="btn btn-dark btn-outline" onclick="location.href='{{ path('empleado_usuario_index') }}'"><i class="fa fa-angle-left "></i> back to list</button>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ empleado_usuario.id }}</td>
                            </tr>
                            <tr>
                                <th>Credencial</th>
                                <td>{{ empleado_usuario.idCredencial }}</td>
                            </tr>
                            <tr>
                                <th>Empleado</th>
                                <td>{{ empleado_usuario.idEmpleado }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <button type="button" class="btn btn-info btn-block" onclick="location.href='{{ path('empleado_usuario_edit', {'id': empleado_usuario.id}) }}'"> <i class="fa fa-pencil"></i> Edit</button>

                    <br>
                    {{ include('empleado_usuario/_delete_form.html.twig') }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}