{% extends 'base.html.twig' %}

{% block title %}Empleado{% endblock %}

{% block slidebar %}
    {{ include('view/sidebarnav/menu.html.twig') }}
{% endblock %}

{%  block profile %}
    {% if is_granted('ROLE_ADMIN') %}
        <img src="{{ asset('images/users/admin.png') }}" alt="admin" class="profile-pic" />
    {% endif %}
    {% if is_granted('ROLE_USER') %}
        <img src="{{ asset('images/users/user.png') }}" alt="user" class="profile-pic" />
    {% endif %}
{%  endblock profile %}

{% block body %}
    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Empleado</h4>

                    <button type="button" class="btn btn-dark btn-outline" onclick="location.href='{{ path('empleado_index') }}'"><i class="fa fa-angle-left "></i> back to list</button>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ empleado.id }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ empleado.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Ape</th>
                            <td>{{ empleado.ape }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <button type="button" class="btn btn-info btn-block" onclick="location.href='{{ path('empleado_edit', {'id': empleado.id}) }}'"> <i class="fa fa-pencil"></i> Edit</button>

                    <br>
                    {{ include('empleado/_delete_form.html.twig') }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}